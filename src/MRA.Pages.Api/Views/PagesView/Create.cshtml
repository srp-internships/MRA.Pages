@model CreatePageCommand

@{
    ViewBag.Title = "Create Page";
    Layout = "_Layout";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Create Page</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-action="Create" id="createPageForm">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Enter page name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Application">Application</label>
                            <input type="text" class="form-control" asp-for="Application" placeholder="Enter application">
                        </div>
                        <div class="form-group">
                            <label asp-for="Role">Role</label>
                            <input type="text" class="form-control" asp-for="Role" placeholder="Enter role">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" asp-for="ShowInMenu">
                            <label class="form-check-label" asp-for="ShowInMenu">Show in menu</label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block"><i class="bi-file-earmark-plus"></i>Create page</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>